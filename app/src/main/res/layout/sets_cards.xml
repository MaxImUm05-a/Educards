<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue">

    <ImageButton
        android:id="@+id/account"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_account"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintStart_toStartOf="20dp"
        app:layout_constraintTop_toTopOf="20dp"
        />

    <ImageButton
        android:id="@+id/messages"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_back"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintStart_toStartOf="351dp"
        app:layout_constraintTop_toTopOf="20dp"
        />

    <TextView
        android:layout_width="211dp"
        android:layout_height="112dp"
        android:width="188dp"
        android:height="80dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/sets_of_cards"
        android:textColor="@color/white_title"
        android:textSize="45dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="20dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="127dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="140dp"
            android:layout_height="184dp"
            android:background="@drawable/rounded_grey_button"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="116dp"
                android:layout_height="124dp"
                android:background="@drawable/rounded_black_grey_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="14dp" />

            <TextView
                android:layout_width="54dp"
                android:layout_height="22dp"
                android:fontFamily="@font/interbold"
                android:text="@string/name"
                android:textColor="@color/black_text"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>