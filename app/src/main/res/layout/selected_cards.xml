<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue">

    <ImageButton
        android:id="@+id/account"
        android:contentDescription="@string/button_account"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_account"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintStart_toStartOf="20dp"
        app:layout_constraintTop_toTopOf="20dp"
        />

    <ImageButton
        android:id="@+id/messages"
        android:contentDescription="@string/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_back"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintStart_toStartOf="351dp"
        app:layout_constraintTop_toTopOf="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:width="188dp"
        android:height="80dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/selected_cards"
        android:textAlignment="center"
        android:textColor="@color/white_title"
        android:textSize="45dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!--    при написанні джава коду: зробити макет набору і потім їм наповнювати грідлеяот-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="127dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="140dp"
            android:layout_height="184dp"
            android:background="@drawable/rounded_grey_button"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="116dp"
                android:layout_height="124dp"
                android:background="@drawable/rounded_black_grey_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="14dp" />

            <TextView
                android:layout_width="54dp"
                android:layout_height="22dp"
                android:fontFamily="@font/interbold"
                android:text="@string/name"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_active_favorite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white_blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_blue_cards"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserratbold"
                android:text="@string/cards"
                android:textColor="@color/light_blue"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tests"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_black_tests"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserratbold"
                android:text="@string/tests"
                android:textColor="@color/black_text"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:layout_width="40dp"
        android:contentDescription="@string/button_back"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_left_back_pas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp"/>


    <ImageButton
        android:layout_width="40dp"
        android:contentDescription="@string/button_forward"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_right_back_act"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>