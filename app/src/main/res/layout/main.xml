<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue">


    <View
        android:id="@+id/wave_top"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_wave_top" />

    <View
        android:id="@+id/wave_bottom"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        tools:layout_editor_absoluteY="858dp"
        android:background="@drawable/main_wave_bottom" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="40dp"
        android:text="@string/app_name"
        android:textSize="28dp"
        android:fontFamily="@font/otomanopee"
        android:textColor="@color/white_title"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="26dp" />




</androidx.constraintlayout.widget.ConstraintLayout>