<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue">

    <!-- View для верхньої хвилі -->
    <View
        android:id="@+id/wave_top"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_wave_top" />


    <View
        android:id="@+id/wave_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/main_wave_bottom"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="676dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="40dp"
        android:fontFamily="@font/otomanopee"
        android:text="@string/app_name"
        android:textColor="@color/white_title"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@id/wave_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        tools:layout_editor_absoluteY="10dp"/>

    <ImageView
        android:id="@+id/account"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/body"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp"
        />

    <ImageView
        android:id="@+id/messages"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/messages"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>