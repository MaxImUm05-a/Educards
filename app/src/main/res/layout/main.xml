<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue">

    <!-- View для верхньої хвилі -->
    <View
        android:id="@+id/wave_top"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_wave_top" />


    <View
        android:id="@+id/wave_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/main_wave_bottom"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="676dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="40dp"
        android:fontFamily="@font/otomanopee"
        android:text="@string/app_name"
        android:textColor="@color/white_title"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@id/wave_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        tools:layout_editor_absoluteY="5dp"/>

    <ImageButton
        android:id="@+id/account"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/account"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintStart_toStartOf="20dp"
        app:layout_constraintTop_toTopOf="20dp"
        />

    <ImageButton
        android:id="@+id/messages"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/messages"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintStart_toStartOf="351dp"
        app:layout_constraintTop_toTopOf="20dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="308dp"
        android:layout_height="46dp"
        android:background=""
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="124dp"
        app:layout_constraintStart_toStartOf="26dp"
        app:layout_constraintTop_toTopOf="124dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_grey_button"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="@string/search"
            android:textColor="@color/white_grey"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="13dp"
            app:layout_constraintStart_toStartOf="14dp"
            app:layout_constraintTop_toTopOf="13dp" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="264dp"
            app:layout_constraintTop_toTopOf="10dp"
            tools:srcCompat="@drawable/search"
            tools:layout_editor_absoluteX="264dp"
            tools:layout_editor_absoluteY="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="112dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="200dp"
        app:layout_constraintStart_toStartOf="26dp"
        app:layout_constraintTop_toTopOf="124dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="292dp"
            android:height="29dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="@string/start_study"
            android:textColor="@color/clean_white"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_grey_button"
            android:paddingTop="20dp"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="10dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>